@model PizzaEverisDay.Models.Pedido

@{
    ViewData["Title"] = "Details";
}

<link href="~/css/global.css" rel="stylesheet">

<h1>Detalhe</h1>

<div>
    <h4 class="text-dark">Pedido: @Model.IdPedido</h4>
    <hr />
    <dl class="row text-dark">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CPF)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CPF)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data_Pedido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data_Pedido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco_Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco_Total)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Forma_De_Pagamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Forma_De_Pagamento)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.IdPedido">Editar</a>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</div>
