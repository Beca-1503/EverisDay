@model PizzaEverisDay.Models.ProdutosParaPedido

@{
    ViewData["Title"] = "Edit";
}

<link href="~/css/global.css" rel="stylesheet">

<h1>Editar</h1>

<h4 class="text-dark">Cliente: @Model.Pedido.CPF </h4>
<h4 class="text-dark">Pedido: @Model.Pedido.IdPedido</h4>
<hr />
<div class="row text-dark">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pedido.IdPedido" />

            <div class="form-group">
                <label asp-for="Pedido.Data_Pedido" class="control-label"></label>
                <input asp-for="Pedido.Data_Pedido" class="form-control" />
                <span asp-validation-for="Pedido.Data_Pedido" class="text-danger"></span>
            </div>
       
            <div class="form-group">
                <label asp-for="Pedido.Forma_De_Pagamento" class="control-label"></label>                
                    <select name="FormaPagamento">

                        <option value="Dinheiro">
                            Dinheiro
                        </option>
                        <option value="Cartão de Crédito">
                            Cartão de Crédito
                        </option>
                        <option value="Cartão de Débito">
                            Cartão de Débito
                        </option>
                    </select>
            </div>
                    <div class="form-group">
                        <label asp-for="Pedido.Status_Pedido" class="control-label"></label>
                        <select name="Status_Pedido">
                            <option value="Em andamento">
                                Em Andamento
                            </option>
                            <option value="A caminho">
                                A caminho
                            </option>
                            <option value="Entregue">
                                Entregue
                            </option>
                            <option value="Concluido">
                                Concluido
                            </option>
                            <option value="Cancelado">
                                Cancelado
                            </option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-info" asp-action="Index"  />
                        <a class="btn btn-secondary" asp-action="Index">Voltar</a>
                    </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
