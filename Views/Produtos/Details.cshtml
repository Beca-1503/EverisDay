@model PizzaEverisDay.Models.Produtos

@{
    ViewData["Title"] = "Details";
}

<link href="~/css/global.css" rel="stylesheet">

<h1>Detalhes</h1>

<div>
    <h4 class="text-dark">Produto nº @Model.Id_Produto</h4>
    <hr />
    <dl class="row text-dark">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tamanho)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tamanho)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id_Produto">Editar</a>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</div>
