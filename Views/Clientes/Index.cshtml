@model IEnumerable<PizzaEverisDay.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>


<table class="table table-striped badge-info">
    <thead class="text-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data_Nascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-dark">
@foreach (var item in Model) {
        <tr>
            <td>
                        @Html.DisplayFor(modelItem => item.CPF)
                    </td>
                    <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_Nascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.CPF">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.CPF">Detales</a> |
                        <a asp-action="Delete" asp-route-id="@item.CPF">Deleare</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a class="btn-primary p-2" asp-action="Create">Criar Cliente</a>
</p>