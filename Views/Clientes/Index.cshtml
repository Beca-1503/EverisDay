@model IEnumerable<PizzaEverisDay.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<link href="~/css/global.css" rel="stylesheet">

<h1>Cadastro de Clientes</h1>


<table class="table table-striped ">
    <thead class="text-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data_Nascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody class="text-dark">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data_Nascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.CPF">Editar</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.CPF">Detalhes</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CPF">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a class="btn btn-info" asp-action="Create">Criar Cliente</a>
</p>