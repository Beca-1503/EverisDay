@model PizzaEverisDay.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<link href="~/css/global.css" rel="stylesheet">

<h1>Detalhes</h1>

<div>
    <h4 class="text-dark">Cliente: @Model.CPF</h4>
    <hr />
    <dl class="row text-dark">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data_Nascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data_Nascimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.CPF">Editar</a>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</div>
