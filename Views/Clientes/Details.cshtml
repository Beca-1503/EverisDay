@model PizzaEverisDay.Models.ProdutosParaPedido

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Cliente: @Model.cliente.CPF</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cliente.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cliente.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cliente.Data_Nascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cliente.Data_Nascimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cliente.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cliente.Telefone)
        </dd>
        <dt class="col-sm-2">
            Cidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ListaCidade.First(x => x.IdCidade == model.endereco.IdCidade).Nome)
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ListaCidade.First(x => x.IdCidade == model.endereco.IdCidade).Uf)
        </dd>
        
        
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.cliente.CPF">Editar</a> |
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</div>
