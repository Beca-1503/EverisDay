@model PizzaEverisDay.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<link href="~/css/global.css" rel="stylesheet">

<h1>Apagar</h1>

<h3 class="text-dark text-center m-10">Você tem certeza que deseja apagar esse cliente?</h3>
<div>
    <h4 class="text-dark">Cliente: @Model.CPF</h4>
    <hr />
    <dl class="row text-dark">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data_Nascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data_Nascimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CPF" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Voltar</a>
    </form>
</div>
