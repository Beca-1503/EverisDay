@model PizzaEverisDay.Models.Pedido

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Pedido: @Model.IdPedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPedido" />
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_Pedido" class="control-label"></label>
                <input asp-for="Data_Pedido" class="form-control" />
                <span asp-validation-for="Data_Pedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco_Total" class="control-label"></label>
                <input asp-for="Preco_Total" class="form-control" />
                <span asp-validation-for="Preco_Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Forma_De_Pagamento" class="control-label"></label>
                <input asp-for="Forma_De_Pagamento" class="form-control" />
                <span asp-validation-for="Forma_De_Pagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status_Pedido" class="control-label"></label>
                <select name="Status_Pedido">
                    <option value="Em andamento">
                        Em Andamento
                    </option>
                    <option value="A caminho">
                        A caminho
                    </option>
                    <option value="Entregue">
                        Entregue
                    </option>
                    <option value="Concluido">
                        Concluido
                    </option>
                    <option value="Cancelado">
                        Cancelado
                    </option>
                </select>          
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
