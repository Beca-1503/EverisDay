@model PizzaEverisDay.Models.Pedido

@{
    ViewData["Title"] = "Delete";
}

<link href="~/css/global.css" rel="stylesheet">

<h1>Apagar</h1>

<h3 class="text-dark text-center m-10">Tem certeza que deseja apagar esse Pedido?</h3>
<div>
    <h4 class="text-dark">@Html.DisplayNameFor(model => model.IdPedido) @Model.IdPedido</h4>
    <hr />
    <dl class="row text-dark">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CPF)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CPF)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data_Pedido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data_Pedido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco_Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco_Total)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Forma_De_Pagamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Forma_De_Pagamento)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPedido" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Voltar</a>
    </form>
</div>
